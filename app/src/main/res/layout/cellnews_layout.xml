        <androidx.cardview.widget.CardView
            android:background="@drawable/bg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bg_color"
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/newsImageView"
                app:layout_constraintStart_toStartOf="@id/newsImageView">


                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo:"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>



                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Titulo del post"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="10dp"/>





            </LinearLayout>

        </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:background="#90141414"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/newsImageView"
        app:layout_constraintStart_toStartOf="@id/newsImageView">

            <LinearLayout
                android:background="#90141414"
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/newsImageView"
                app:layout_constraintStart_toStartOf="@id/newsImageView">


                <TextView
                    android:id="@+id/textViewAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:typeface="sans"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/textAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Unknown"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:paddingBottom="10dp"/>


            </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:background="@drawable/bg_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/newsImageView"
        app:layout_constraintBottom_toBottomOf="@id/newsImageView">

            <LinearLayout
                android:background="@drawable/bg_color"
                android:id="@+id/linear4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/newsImageView"
                app:layout_constraintBottom_toBottomOf="@id/newsImageView">

                <TextView
                    android:id="@+id/textBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Unknown"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:paddingBottom="1dp"/>

            </LinearLayout>

    </androidx.cardview.widget.CardView>


